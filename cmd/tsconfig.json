{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@al/cmd/*": ["./src/*"],
      "@al/ui/models/*": ["../ui/src/models/*"],
      "@al/ui/services/*": ["../ui/src/services/*"],
      "@al/ui/utils/*": ["../ui/src/utils/*"]
    }
  },
  "include": ["src/**/*", "../ui/src/**/*"]
}
