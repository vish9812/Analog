{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@al/cmd/*": ["cmd/*"],
      "@al/components/*": ["ui/src/components/*"],
      "@al/models/*": ["ui/src/models/*"],
      "@al/pages/*": ["ui/src/pages/*"],
      "@al/services/*": ["ui/src/services/*"],
      "@al/utils/*": ["ui/src/utils/*"]
    }
  }
}
