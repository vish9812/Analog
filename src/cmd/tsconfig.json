{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@al/cmd/*": ["./*"],
      "@al/components/*": ["../components/*"],
      "@al/models/*": ["../models/*"],
      "@al/pages/*": ["../pages/*"],
      "@al/services/*": ["../services/*"],
      "@al/utils/*": ["../utils/*"]
    }
  }
}
